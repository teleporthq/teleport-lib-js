{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "declaration": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "noImplicitAny": false,
    "sourceMap": true,
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "./__tests__/**/*"
  ]
}